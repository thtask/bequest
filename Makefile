# ============================================================================= #
# INTEGRATION TESTS
# ============================================================================= #
.PHONY: integration_tests
integration_tests:
	go test -tags integration -p 1 ./...

# ============================================================================= #
# BUILD IMAGE
# ============================================================================= #
.PHONY: build
build: 
	docker-compose build 

# ============================================================================= #
# START IMAGE
# ============================================================================= #
.PHONY: start
start: build
	docker-compose up -d

.PHONY: stop
stop: 
	docker-compose down